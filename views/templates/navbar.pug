- if(usuario) clasesLogged = "d-none";
- if(usuario) clasesAccount = "navbar navbar-expand-lg navbar-dark bg-danger px-5";
- if(!usuario) clasesAccount = "d-none";
- if(!usuario) clasesLogged = "navbar navbar-expand-lg navbar-dark bg-danger px-5";

nav(class=clasesLogged)
	a(class="navbar-brand" href="#")
		h2(class="yourBrandLogo") Your company
	button(
		class="navbar-toggler"
		type="button"
		data-toggle="collapse"
		data-target="#navbarSupportedContent"
		aria-controls="navbarSupportedContent"
		aria-expanded="false"
		aria-label="Toggle navigation"
	)
		span(class="navbar-toggler-icon")

	div(class="navbar-nav my-3 mx-5" id="searchItem")
		div(class="input-group")
			input(
				type="text"
				class="form-control border-0"
				placeholder="An amazing shirt"
			)
			div(class="input-group-append")
				button(class="btn btn-light input-group-text")
					i(class="fas fa-search text-black")

	div(class="collapse navbar-collapse" id="navbarSupportedContent")
		ul(class="navbar-nav ml-auto")
			li(class="nav-item mx-0")
				a(class="nav-link" href="#")
					i(
						class="fas fa-phone text-white-50 fa-lg d-inline mr-2"
					)
					strong(class="text-black-50") About us
			li(class="nav-item")
				a(class="nav-link" href="#")
					i(
						class="fas fa-shopping-cart d-inline text-white-50 fa-lg mr-2"
					)
					strong(class="text-black-50") Your cart
			li(class="nav-item active")
				a(class="nav-link" href="/login")
					i(
						class="fas fa-user d-inline text-white-50 fa-lg mr-2"
					)
					strong Sign In


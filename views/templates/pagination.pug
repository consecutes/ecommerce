div(class="container" id="pagination")
	div(class="row")
		div(class="col-12")
			nav(class="mt-4")
				ul(class="pagination justify-content-center" )

					<!-- PREVIOUS BUTTON -->
					li(class="page-item" id="previousLi")
						a(class="page-link text-body" id="previousPage" href="#productsArea")
							span
								i(class="fas fa-arrow-left")
							span(class="sr-only") Previous

					<!-- PAGES -->
					- var paginas = Object.keys(productos).length;
					- var contador = 1;
					while contador <= paginas
						li(class="page-item")
							a(class="page-link text-body" id=contador href="#productsArea")
								strong= contador
						- contador++

					<!-- PAGES END -->

					<!-- NEXT BUTTON -->
					li(class="page-item" id="nextLi")
						a(class="page-link text-body" id="nextPage" href="#productsArea")
							span
								i(class="fas fa-arrow-right")
							span(class="sr-only") Next